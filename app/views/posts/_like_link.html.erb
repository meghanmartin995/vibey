<%# vote_text = voter&.voted_for?(post) ? "Unlike" : "Like" %>

<%#= button_to vote_text, like_post_path(post), method: :put, remote: :true, class: 'like-post' %>

<% if @voter&.voted_for?(post) %>
  <%= button_to like_post_path(post), method: :put, remote: :true, id: "favorite-#{post.id}", class: 'like-post' do %>
    <i class="fas fa-heart"></i>
  <% end %>
<% else %>
  <%= button_to like_post_path(post), method: :put, remote: :true, id: "favorite-#{post.id}", class: 'like-post' do %>
    <i class="far fa-heart"></i>
  <% end %>
<% end %>
